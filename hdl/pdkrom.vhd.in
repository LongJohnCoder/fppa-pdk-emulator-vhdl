library IEEE;
use IEEE.STD_LOGIC_1164.all;

entity pdkrom is
  port (
    PC_i:   in natural;
    dat_o:  out std_logic_vector(15 downto 0)
  );
end entity pdkrom;

architecture sim of pdkrom is

  signal dat_s: std_logic_vector(15 downto 0);

begin
  process(PC_i)
  begin
    case PC_i is
-- ROM --
      when others => dat_s <= (others => '0');
    end case;
  end process;

  dat_o <= dat_s;

end sim;
